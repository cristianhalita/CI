<div class="container mt-2">
    <h2 class="text-center">Delete this account</h2>
      {{#each errors as |error|}}
        <div class="alert alert-danger alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{error}}
        </div>
    {{/each}}

    {{#each warnings as |warning|}}
        <div class="alert alert-warning alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{warning}}
        </div>
    {{/each}}

      {{#each successes as |success|}}
        <div class="alert alert-success alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{success}}
        </div>
    {{/each}}

    <div class="border pt-3 pl-5 pr-5 pb-3 shadow-lg bg-light">
        <h4 class="text-center"><u>Before your delete your account, make sure all jobs have been invoiced.</u></h4>
        <form action="/profile/delete" method="post">
            <div class="form-group">
                <label><input type="checkbox" required> I understand that I won't be able to log on anymore after I delete my account.</label>
            </div>
            <div class="form-group">
                <label><input type="checkbox" required> I understand that I won't be able to restore my account once it has been deleted.</label>
            </div>
            <div class="form-group">
                <label><input type="checkbox" required> I understand that I won't be able to generate an invoice once it has been deleted.</label>
            </div>
            <div class="form-group">
                <textarea class="form-control" placeholder="Feel free to let us know why you want to delete your account." name="explanation"></textarea>
            </div>

            <div class="text-center">
                <button id="submitButton" type="submit" class="btn btn-danger">Delete</button>
            </div>

        </form>
    </div>

