<div class="container mt-2">
    <h2 class="text-center">N.D.A.</h2>
      {{#each errors as |error|}}
        <div class="alert alert-danger alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{error}}
        </div>
    {{/each}}

    {{#each warnings as |warning|}}
        <div class="alert alert-warning alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{warning}}
        </div>
    {{/each}}

      {{#each successes as |success|}}
        <div class="alert alert-success alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{success}}
        </div>
    {{/each}}

    <div class="border pt-3 pl-5 pr-5 pb-3 shadow-lg bg-light">
        <h4 class="text-center">Agreement</h4>
        {{#each NDA}}
            <div class="form-group">
                <label><input disabled checked type="checkbox" required> {{this.NDA}}</label>
            </div>
        {{/each}}

        {{#if freelancer.lspId}}
            <p><b>IN ORDER TO WORK FOR {{freelancer.lspCompanyName}} ON THE JOB PORTAL OF DATAMUNDI, YOU NEED TO AGREE TO THIS. PLEASE READ CAREFULLY.</b></p>
        {{else}}
            <p><b>If you no longer agree to one of these, please stop working for us and <a href="/profile/delete">delete</a> your account.</b></p>
        {{/if}}
    </div>
</div>

